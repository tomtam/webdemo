    text-align: center;
    .guide-group {
        display: inline-block;
        width: 280px;
        height: 180px;
        background: #fff;
        margin: 0 18px;
        cursor: pointer;
        broder-radius: 3px;
        .title {
            text-align: center;
            margin: 15px 0 30px;
            font-size: 16px;
            color: #fff;
        }
        p {
            padding: 0 20px;
            color: #222;
        }
    }
    .num1{
        background: url("/static/image/guidp1.png");
